<div class="container-fluid">
	<div class="row-fluid">
		<div class="span6">
			<div class="well">
				<%= image_tag @pin.image %>
				<% if current_user == @pin.user %>
					<%= link_to 'Edit', edit_pin_path(@pin) %> |
				<% end %>
				<%= link_to 'Back', pins_path %>
			</div>	
		</div>	
		<div class="span6">	
			<div class="well">
				<H4>
				  <%= @pin.Designer %>
				</H4>
				<p>
				  <%= @pin.description %>
				</p>
				
				<p>
				  Lender: <%= @pin.user.name %>
				</p>
			</div>	
		</div>	
	</div>		
</div>
