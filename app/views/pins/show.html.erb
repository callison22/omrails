<div class="container-fluid">
	<div class="row-fluid">
		<div class="span6">
			<div class="well">
				<%= image_tag @pin.image %>
				<% if current_user == @pin.user %>
					<%= link_to 'Edit', edit_pin_path(@pin) %> |
				<% end %>
				<%= link_to 'Back', pins_path %>
			</div>	
		</div>	
		<div class="span6">	
			<div class="well">
				<H4>
				  <%= @pin.Designer %>
				</H4>
				<p>
				  <%= @pin.description %>
				</p>
				<p>
				  Size: <%= @pin.size %>
				</p>
				<H5>
				  Rental Price: <%= @pin.price %> (Retail Value: <%= @pin.price %>)
				</H5>
				<H6>
				  Condition: <%= @pin.condition %>
				</H6>
				<p>
				  Lender's Notes: <%= @pin.lender_notes %>
				</p>

				<p>
				  Lender: <%= @pin.user.name %>
				</p>
				
			</div>	
		</div>	
	</div>		
</div>
